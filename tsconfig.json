{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": ".",
		"declaration": true,
		"types": ["node"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
